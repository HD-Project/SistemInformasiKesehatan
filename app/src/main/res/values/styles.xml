<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>

    <style name="Background" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg2</item>
    </style>

    <style name="Background_main" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="Background_login" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_login</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HiDepok" parent="AppTheme.NoActionBar" />

    <style name="HiDepok.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HiDepok.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HiDepokContent" parent="AppTheme" />

    <!-- Style Costom Hadi -->

    <style name="tulisanPutih">
        <item name="android:textColor">@color/putih</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="tulisanAbu2">
        <item name="android:textColor">@color/abuAbu</item>
    </style>

    <style name="tulisanOrange">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="paragrafBiasa">
        <item name="android:textColor">@color/putih</item>
    </style>

    <style name="buttonStyle">
        <item name="android:radius">30dp</item>
        <item name="android:colorBackground">@color/orange</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
